
@page "/Benzin"
@inject BlazorWASM.Services.APIService APIService
@using BlazorWASM.Services


<h1>Benzin</h1>

<input type="date" @bind="StartDate"/>
<input type="date" @bind="EndDate"/>

<input type="number" step="0.01" @bind="MinPrice" placeholder="Min Price" />
<input type="number" step="0.01" @bind="MaxPrice" placeholder="Max Price" />

<button class="btn_viewGraph" @onclick="OnShowModalClick"> View Graph</button> 

    <Modal @ref="modal" title="Test" IsVerticallyCentered="true" Fullscreen="ModalFullscreen.Always">
        <BodyTemplate>
            <LineChart @ref="lineChart" />
            
        </BodyTemplate>
        <FooterTemplate>
            @* <button @onclick="OnHideModalClick">Close</button> *@
        </FooterTemplate>
    </Modal>

<table class="table">
    @if (listAfBenzin == null)
    {
        <tr>
            <td>Indl√¶ser...</td>
        </tr>
    }
    else
    {
        <thead>
            <tr>
                <th>Date</th>
                <th>Price</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var benzin in FilteredList)
            {
                <tr>
                    <td>@benzin.Date</td>
                    <td>@benzin.Price</td>
                </tr>
            }
        </tbody>
    }
</table>


